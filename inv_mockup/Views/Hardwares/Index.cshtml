@model IEnumerable<inv_mockup.Models.Hardware>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NewHardware)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReclaimedPrice)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewHardware)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReclaimedPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HardwareID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HardwareID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HardwareID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
